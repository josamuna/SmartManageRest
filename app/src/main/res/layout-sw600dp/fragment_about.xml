<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.FragmentAbout"
        android:orientation="vertical"
        android:background="@color/color_white">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_centerVertical="true"
            tools:ignore="UselessParent">

        <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/ImgLogo"
                android:contentDescription="@string/str_title3"
                android:src="@drawable/logosmartmanage"
                android:layout_centerHorizontal="true"
                android:alpha="0.3"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt1"
                android:layout_below="@+id/ImgLogo"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="@string/str_title1"
                android:textSize="33sp"
                android:textStyle="bold"
                android:textColor="@color/color_background_header_main"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt2"
                android:layout_below="@+id/txt1"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:text="@string/str_title2"
                android:textSize="21sp"
                android:textColor="@color/color_background_header_main"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txt3"
                android:layout_below="@+id/txt2"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/str_title3"
                android:textSize="18sp"
                android:textColor="@color/color_background_header_main"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt3"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/str_title4"
                android:textSize="17sp"
                android:textColor="@color/color_text_btn_login"/>
    </RelativeLayout>

</RelativeLayout>